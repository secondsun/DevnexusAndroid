<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:minHeight="128dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/session_description"
        android:layout_gravity="bottom"
        android:scaleType="fitCenter"
        android:src="@drawable/speaker" />

    <View
        android:id="@+id/gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/session_description"
        android:layout_alignBottom="@+id/session_title"
        android:background="@drawable/gradient_dn_dark_green" />

    <TextView
        android:id="@+id/session_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="Title"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/session_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session_title"
        android:background="@color/dn_dark_green"
        android:lines="5"
        android:padding="5dp"
        android:text="Title"
        android:textSize="12sp"
        android:textStyle="normal" />
</RelativeLayout>